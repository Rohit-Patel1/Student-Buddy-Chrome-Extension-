{
  "manifest_version": 3,
  "name": "Student Buddy",
  "description": "Student productivity Chrome extension with persistent exam reminders.",
  "version": "1.8",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon.png"
  }
}
